<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".domains.mainEnglish.MainEnglishActivity"
    tools:showIn="@layout/app_bar_main_english">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/mt" />

            <LinearLayout
                android:id="@+id/llWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/square_blue"
                android:layout_marginBottom="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/nao"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/darkblue"
                    android:text="Từ Vựng"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/square_blue"
                android:layout_marginBottom="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/viet"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/darkblue"
                    android:text="Luyện Viết"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llListen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/square_blue"
                android:layout_marginBottom="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/loa"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/darkblue"
                    android:text="Luyện Nghe"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/square_blue"
                android:padding="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/tn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/darkblue"
                    android:text="Trắc Nghiệm"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>